{% use '../CommonAdmin/ListTemplate/nbresults.php.twig' %}
{% use '../CommonAdmin/ListTemplate/thead.php.twig' %}
{% use '../CommonAdmin/ListTemplate/tbody.php.twig' %}
{% use '../CommonAdmin/ListTemplate/paginator.php.twig' %}
{% use '../CommonAdmin/generic_actions.php.twig' %}
{% use '../CommonAdmin/batch_actions.php.twig' %}

{% block list_results %}
<div class="results-list">
        <div class="top_block">
            {{- block('list_nbresults') -}}

            {{- block('form_batch_actions') }}

            {{ echo_block("filter_button") }}
                {% if builder.filterColumns|length > 0 %}
                    <a class="btn-filter btn" onclick="$('.filters').show();"><i class="icon-search icon-white"></i> {{ echo_trans('list.filters') }}</a>
                {% endif %}
            {{ echo_endblock() }}    
             {% if actions is defined and actions|length > 0 %}
                <div id="generic_actions" class="pull-left btn-toolbar">
                    {{ block('generic_actions') -}}
                </div>
            {% endif -%}
        </div>
        <div style="clear:both;"></div>
        <div class="table-list">
            <table id="table-list-{{ builder.ModelClass }}" class="table table-striped table-hover table-condensed object-actions-{{ builder.ModelClass }}">
                {{ block('list_thead') -}}
                {{- block('list_tbody') }}
            </table>
        </div>        
        <div class="form-actions list-actions">
        {% if batch_actions is defined and batch_actions|length > 0 %}
            <div id="batch_actions" class="pull-left btn-toolbar">
                {{ block('batch_actions') }}
            </div>
        {% endif -%}

            <div class="pull-right btn-toolbar">
                {{- block('list_paginator_perpage') -}}
            </div>

            <div class="pull-right btn-toolbar">
                {{- block('list_paginator_pages') -}}
            </div>
        </div>
    {{- block('endform_batch_actions') }}
</div>
{% endblock list_results %}